        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:store2"
        mc:Ignorable="d"
        Title="Store Login" Height="450" Width="800" Background="Ivory">
    <Grid>
        <TextBox Foreground="Gray" Name="username_txt" Height="23" Margin="336,154,336,0" TextWrapping="Wrap" Text="USERNAME" VerticalAlignment="Top" Width="120"/>
        <TextBox Foreground="Gray" Name="password_txt" FontFamily="ms-appx:///Assets/PassDot.ttf#PassDot" Height="23" Margin="336,230,336,0" TextWrapping="Wrap" Text="PASSWORD" VerticalAlignment="Top" Width="120" />
        <Button Name="login_btn"  Content="Login " HorizontalAlignment="Left" Margin="358,283,0,0" VerticalAlignment="Top" Width="75" Background="LightBlue" Click="Login_btn_Click"/>

    </Grid>
</Window>
